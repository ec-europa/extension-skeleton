{
    "name": "openeuropa/drupal-module-template",
    "description": "OpenEuropa Drupal module template.",
    "type": "drupal-module",
    "license": "EUPL-1.1",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "composer/installers": "^1.2",
        "drupal/core": "^8.5",
        "drupal/drupal-extension": "^4.0.0@alpha",
        "drush/drush": "^9",
        "openeuropa/code-review": "^0.2",
        "openeuropa/task-runner": "^0.4",
        "phpunit/phpunit": "^4.8.28"
    },
    "suggest": {
        "drupal/console": "^1",
        "drupal/drupal-extension": "^4.0.0@alpha"
    },
    "scripts": {
	    "post-create-project-cmd": [
	        "./replace-names.sh",
            "@drupal-scaffold"
        ]
    },
    "autoload-dev": {
        "psr-0": {
            "Drupal\\Tests": "build/core/tests",
            "Drupal\\KernelTests": "build/core/tests",
            "Drupal\\FunctionalTests": "build/core/tests",
            "Drupal\\FunctionalJavascriptTests": "build/core/tests"
        },
        "psr-4": {
            "Drupal\\simpletest\\": "build/core/modules/simpletest/src",
            "Drupal\\Tests\\drupal-module-template\\": "tests"
        }
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    },
    "extra": {
        "installer-paths": {
            "build/core": ["type:drupal-core"],
            "build/modules/contrib/{$name}": ["type:drupal-module"],
            "build/themes/contrib/{$name}": ["type:drupal-theme"]
        }
    }
}
